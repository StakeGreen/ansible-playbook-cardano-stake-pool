global:
    scrape_interval:     15s # By default, scrape targets every 15 seconds.

    # Attach these labels to any time series or alerts when communicating with
    # external systems (federation, remote storage, Alertmanager).
    external_labels:
        monitor: 'codelab-monitor'

# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
scrape_configs:
    # The job name is added as a label job=<job_name> to any timeseries scraped from this config.
    - job_name: 'cardano'

      static_configs:
          - targets: ['{{ block_producer_ip }}:{{ cardana_prometheus_port }}']
            labels:
                alias: 'core'
                type:  'cardano-node'
          - targets: ['{{ relay1_ip }}:{{ cardana_prometheus_port }}']
            labels:
                alias: 'relay1'
                type:  'cardano-node'
          - targets: ['{{ relay2_ip }}:{{ cardana_prometheus_port }}']
            labels:
                alias: 'relay2'
                type:  'cardano-node'

    -   job_name: 'node'

        static_configs:
            -   targets: [ '{{ block_producer_ip }}:{{ prometheus_node_exporter_port }}' ]
                labels:
                    alias: 'core'
                    type: 'host-system'
            -   targets: [ '{{ relay1_ip }}:{{ prometheus_node_exporter_port }}' ]
                labels:
                    alias: 'relay1'
                    type: 'host-system'
            -   targets: [ '{{ relay2_ip }}:{{ prometheus_node_exporter_port }}' ]
                labels:
                    alias: 'relay2'
                    type: 'host-system'
